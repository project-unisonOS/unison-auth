# Unison Auth Service Configuration

# Service Configuration
AUTH_PORT=8088
AUTH_HOST=0.0.0.0

# Development Mode (WARNING: Only set to true for development!)
# This enables default users with weak passwords
UNISON_AUTH_DEV_MODE=false

# RSA Key Management
UNISON_AUTH_KEYS_DIR=/app/keys
UNISON_AUTH_KEY_ROTATION_HOURS=24

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Token Configuration
UNISON_ACCESS_TOKEN_EXPIRE_MINUTES=30
UNISON_REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Service Account Secrets (REQUIRED for production)
UNISON_ORCHESTRATOR_SERVICE_SECRET=
UNISON_INFERENCE_SERVICE_SECRET=
UNISON_POLICY_SERVICE_SECRET=
UNISON_CONTEXT_SERVICE_SECRET=
UNISON_STORAGE_SERVICE_SECRET=

# Security Features
AUTH_ENABLE_RATE_LIMITING=true
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900
AUTH_ENABLE_CORS=true
AUTH_CORS_ORIGINS=["http://localhost:3000"]

# Feature flags
# Require consent grants for protected endpoints in downstream services.
# Auth itself typically does not enforce consent, but we expose the flag for consistency.
# Default: false (staged rollout)
UNISON_REQUIRE_CONSENT=false

# Logging
LOG_LEVEL=INFO
